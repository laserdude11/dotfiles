 -1





super + Return
    $TERMINAL

super + Escape
    pkill -USR1 sxhkd

super + shift + q
    pkill x

super + =
    notify-send "Battery" "$(acpi)"


super + c
    $TERMINAL -name weechat -e weechat

super + XF86AudioPlay
    $TERMINAL -name ncmpcpp -e ncmpcpp

XF86Calculator
    $TERMINAL -name bc -e bc

super + kp_enter
    $TERMINAL -name bc -e bc

super + b
    qutebrowser

super + shift + b
    firefox

super + f
    $TERMINAL -name ranger -e ranger

super + shift + colon
    dm

super + ctrl + k
    $TERMINAL -e vim .sxhkdrc

super + q
    dmenu -b -p "note:" <&- | xargs gtd q

super + shift + f
    fasd -fl | dmenu -b -p "edit:" | xargs $TERMINAL -e $EDITOR

~button3
    rcm

XF86AudioRaiseVolume
    audioctl up

XF86AudioLowerVolume
    audioctl down

XF86AudioMute
    audioctl mute



super + shift + c
    killw $(pfw); wtf $(lsw | head -1)

super + button2
    fsd $(ind $(pfw)) $(pfw)

super + space
    fsd $(ind $(pfw)) $(pfw)

super + {Left, Down, Up, Right}
    wmv {-20 0, 0 20, 0 -20, 20 0} $(pfw)

super + shift + {Left, Down, Up, Right}
    wmv {-50 0, 0 50, 0 -50, 50 0} $(pfw)

super + alt + {Left, Down, Up, Right}
    wrs {-20 0, 0 20, 0 -20, 20 0} $(pfw)

super + shift + alt + {Left, Down, Up, Right}
    wrs {-50 0, 0 50, 0 -50, 50 0} $(pfw)

super + button4
    focus next

super + button5
    focus prev

super + j
    focus next

super + k
    focus prev

super + shift + {h,j,k,l}
    snap {left, down, up, right}

super + shift + {y,u,n,m}
    snap {tl, tr, bl, br}

