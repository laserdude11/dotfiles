update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

TEXT
${font Armata:size=50:style=bold}${time %l:%M}${font Armata:size=24}${time %P}${font}

${font Armata:size=20}${time %a} ${font Armata:size=36}${time %B %d}${font}

${color cyan}$nodename${color} - $sysname $kernel on $machine

