# My info
set realname="Ben Davenport-Ray"
set signature = $HOME/.sig
set sig_on_top

# paths
set my_muttdir=$HOME/.mutt
set folder = $HOME/var/mail/
set spoolfile = $HOME/var/mail/inbox
set mailcap_path = $my_muttdir/mailcap

# options
set wait_key = no
set mbox_type = Maildir
set timeout = 3
set mail_check=0
unset move
set delete
unset confirmappend
set quit
unset mark_old
set beep_new
set pipe_decode
set crypt_autosign
set edit_headers=yes
set header_cache=~/.cache/mutt
set sendmail="/usr/bin/msmtp"

# set imap_check_subscribed

### Aliases.
set alias_file=$my_muttdir/aliases
source $my_muttdir/aliases

### Viewing mail
set sort=reverse-threads
set sort_aux=last-date-received
set pager_index_lines = 10
auto_view text/html
alternative_order text/plain text/enriched text/html
set read_inc = 100

### Sidebar
set sidebar_visible
set sidebar_format = "%B %?F? [%F]? %* %?N?%N/?%S"
set mail_check_stats
set sidebar_folder_indent
set sidebar_short_path

### Key bindings
source $my_muttdir/keybindings.muttrc

### Colorscheme
source $my_muttdir/colors/laserlight.colors

source $my_muttdir/boxes.muttrc
virtual-mailboxes "Inbox" "notmuch://?query=tag:inbox"
virtual-mailboxes "Unread" "notmuch://?query=tag:unread"
virtual-mailboxes "Old Interop" "notmuch://?query=tag:old_interop"
virtual-mailboxes "Tickets" "notmuch://?query=tag:tickets"
virtual-mailboxes "Lists" "notmuch://?query=tag:lists"

lists schemecomm Schemecomm schemeweb '~lazr/gnot.club' '~sircmpwn/sr.ht-announce'

