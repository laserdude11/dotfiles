# paths
set my_muttdir=$HOME/.mutt
set alias_file=$my_muttdir/aliases
set mailcap_path = $my_muttdir/mailcap

source $my_muttdir/aliases

set signature = $HOME/.sig
set sig_on_top


# options
set wait_key = no
set mbox_type = Maildir
set timeout = 3
set mail_check=0
unset move
set delete
unset confirmappend
set quit
unset mark_old
set beep_new
set pipe_decode

set edit_headers=yes
set header_cache=~/.cache/mutt
set postponed=+drafts
set record=+sent
set realname="Ben Davenport-Ray"
set sendmail="/usr/bin/msmtp"
set sort=reverse-threads
set sort_aux=last-date-received
set spoolfile=+/
set pager_index_lines = 10


auto_view text/html
alternative_order text/plain text/enriched text/html

set sidebar_visible
set sidebar_format = "%B %?F? [%F]? %* %?N?%N/?%S"
set mail_check_stats
set sidebar_folder_indent
set sidebar_short_path

source $my_muttdir/keybindings.muttrc
source $my_muttdir/colors/laserlight.colors
source $my_muttdir/accounts/azaleahealth.com.muttrc
