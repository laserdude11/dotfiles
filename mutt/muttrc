source $HOME/.mutt/aliases
source $HOME/.mutt/shiny.colors

set sendmail="/usr/bin/msmtp"
set realname="Ben Davenport-Ray"
set from="ben.davenportray@gmail.com"
set editor="vim"
set mbox_type=Maildir
set folder=$HOME/mail
set spoolfile=+/Inbox 
set header_cache=~/.cache/mutt
set edit_headers=yes
set postponed=+drafts
set record=+sent
set sort=reverse-threads
set sort_aux=last-date-received

# View the emails in text-first order
auto_view text/html
alternative_order text/plain text/enriched text/html

bind attach <return> view-mailcap

# sidebar
set sidebar_visible = yes
set sidebar_width=30

# index and pager
set pager_index_lines = 10
set pager_context = 3
set pager_stop
set menu_scroll

# Pager key bindings
bind pager k  previous-line
bind pager j  next-line
bind pager gg top
bind pager G  bottom

bind index,pager <down>  sidebar-next
bind index,pager <up>  sidebar-prev
bind index,pager <right>  sidebar-open

#Massive number of mailboxes, for Gmail
mailboxes ! =act =hold =archive 
mailboxes =Sent =Drafts =Starred =Trash 
mailboxes =Secular\ Student\ Alliance
#Development
mailboxes =Github =Github/.Neovim 

mailboxes =School =School/.Coastal =School/.Kennesaw
mailboxes =Social\ Networks =Social\ Networks/.Twitter
mailboxes =Venturing

