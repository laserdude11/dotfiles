source $HOME/.mutt/aliases
source $HOME/.mutt/laserswald.colors

# paths
set alias_file=$HOME/.mutt/aliases
set folder=$HOME/mail/inbox
set signature = $HOME/.mutt/sig

# options
set wait_key = no
set mbox_type=Maildir
set timeout=3
set mail_check=0
unset move
set delete
unset confirmappend
set quit
unset mark_old
set beep_new
set pipe_decode

# keys
bind index gg first-entry
bind index G last-entry
macro index o "<shell-escape>mbsync -qqa<enter>" "Sync email."
macro index a "<limit>all\n" "show all messages (undo limit)"

bind pager k previous-line
bind pager j next-line
bind pager gg top
bind pager G bottom

bind attach <return> view-mailcap

set edit_headers=yes
set editor="vim"
set from="ben.davenportray@gmail.com"
set header_cache=~/.cache/mutt
set postponed=+drafts
set record=+sent
set realname="Ben Davenport-Ray"
set sendmail="/usr/bin/msmtp"
set sort=threads
set spoolfile=+/

source $HOME/.mutt/boxes.muttrc

auto_view text/enriched
alternative_order text/plain text/enriched text/html



