""""""""""""""""""""""""""""""""""""""
" My Vimrc for awesomeness.
" Ben Davenport-Ray
""""""""""""""""""""""""""""""""""""""

let mapleader = ","  " Perhaps the best map leader.
nnoremap ' `
nnoremap ` '

" Set the multibuffer mappings to something more sane.
map <c-j> <c-w>j
map <c-k> <c-w>k
map <c-l> <c-w>l
map <c-h> <c-w>h

" Vimrc autoloading.
autocmd! bufwritepost .vimrc source ~/.vimrc

" Automatic syntax highlighting and completion.
syntax enable
filetype plugin indent on
set ofu=syntaxcomplete#Complete
set gfn=Clean
set guioptions=aegirLt
set nocompatible
set laststatus=2
set encoding=utf-8

au FileType python set omnifunc=pythoncomplete#Complete
au FileType python compiler nose
au FileType c compiler speedunit

" Tags.
set tags+=~/.vim/tags/cpp
set tags+=~/.vim/tags/c_std

set hidden
set autoread
set noacd

" Folding for indented programs.
set foldmethod=indent
set foldlevel=99

" Sets the tabs for four everything, all spaces.
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

" Plugin settings and shortcuts.
call pathogen#infect()

"=== Writing and building.
nmap <leader>w :w!<cr>
nmap <leader>b :MakeGreen<cr>
nmap <leader>B :MakeGreen("rebuild")<cr>
nmap <leader>c :SCCompile<cr>
nmap <leader>r :SCCompileRun<cr>

"=== Information viewing.
nmap <leader>v <Plug>TaskList
nmap <leader>p :Project<cr>
nmap <leader>f :NERDTreeToggle<cr>

"==== Taglist.
nmap <leader>tg :TlistToggle<cr>
let Tlist_Use_Right_Window = 1

"==== SuperTab.

nmap <leader>s :e ~/.vimrc<cr>
nmap <leader>d :bd<cr>

" Colors and visual tweaks.

colors wombat

