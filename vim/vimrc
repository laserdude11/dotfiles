""""""""""""""""""""""""""""""""""""""
" My Vimrc for awesomeness.
" Ben Davenport-Ray
""""""""""""""""""""""""""""""""""""""

call pathogen#infect()

"""" General settings.
syntax enable
filetype plugin indent on
set ofu=syntaxcomplete#Complete
set nocompatible
set laststatus=2
set encoding=utf-8
set hidden
set autoread
set noacd

" Tags.
set tags+=~/.vim/tags/cpp
set tags+=~/.vim/tags/c_std

" Folding for indented programs.
set foldmethod=indent
set foldlevel=99

" Sets the tabs for four everything, all spaces.
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

"""" Auto commands.
au FileType python set omnifunc=pythoncomplete#Complete
au FileType python compiler nose
au FileType c compiler speedunit
au! bufwritepost .vimrc source ~/.vimrc

" Visual panels and looks.
colors solarized
let Tlist_Use_Right_Window = 1
set gfn=Anonymous\ Pro\ 10
set guioptions=aegirLt

"""" Mappings.
let mapleader = ","  " Perhaps the best map leader.
nnoremap ' `
nnoremap ` '

" Set the multibuffer mappings to something more sane.
map <c-j> <c-w>j
map <c-k> <c-w>k
map <c-l> <c-w>l
map <c-h> <c-w>h
map <c-w> <c-w>w


" Normal mode mappings. 
nmap <leader>b      :MakeGreen<cr>
nmap <leader>br     :MakeGreen("rebuild")<cr>
nmap <leader>c      :SCCompile<cr>
nmap <leader>d      :bd<cr>
nmap <leader>f      :NERDTreeToggle<cr>
nmap <leader>p      :Project<cr>
nmap <leader>r      :SCCompileRun<cr>
nmap <leader>v      :e ~/.vimrc<cr>
nmap <leader>tg     :TlistToggle<cr>
nmap <leader>tl      <Plug>TaskList
nmap <leader>w      :w<cr>
nmap <leader>W      :Gwrite<cr>
nmap <leader>x      :cwin<cr>

