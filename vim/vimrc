" My Vimrc for awesomeness.
" Ben Davenport-Ray
""""""""""""""""""""""""""""""""""""""

" Editing section.
"      Preferential bindings.

let mapleader = ","  " Perhaps the best map leader.
nnoremap ' `
nnoremap ` '

"      Set the multibuffer mappings to something more sane.
map <c-j> <c-w>j
map <c-k> <c-w>k
map <c-l> <c-w>l
map <c-h> <c-w>h

"      Vimrc autoloading.
autocmd! bufwritepost .vimrc source ~/.vimrc

" Automatic syntax highlighting and completion.
syntax enable
filetype plugin indent on
set ofu=syntaxcomplete#Complete
set gfn=Clean
set guioptions=aegirLt
let g:SuperTabDefaultCompletionType = "context"

" Filetype only stuff here.
" Python.
au FileType python set omnifunc=pythoncomplete#Complete
autocmd FileType python compiler nose
" Java.

" Tags.
set tags+=~/.vim/tags/cpp
set tags+=~/.vim/tags/c_std
set hidden

set autoread
" Keeps Vim from autochanging directories.
set noacd

" Folding for indented programs.
set foldmethod=indent
set foldlevel=99

" Sets the tabs for four everything, all spaces.
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

" Load up pathogen and the plugins therein.
call pathogen#infect()

" My leader mappings. It starts out at first with nothing but build stuff.

nmap <leader>w :w!<cr>
" Write the current buffer. Super fast and super handy.

"" Project mappings.
"    Build the current project. Wham. Done.
nmap <leader>b :MakeGreen<cr>

"    I usually have a rebuild target in my build files that builds everything
"    from scratch, so this is very useful.
nmap <leader>B :MakeGreen("rebuild")<cr>


"" Plugin settings.
"    SingleCompile is awesome for really small stuff, like random C tiny programs
"    and Java assignments that only have like one class. 
nmap <leader>c :SCCompile<cr>
nmap <leader>r :SCCompileRun<cr>

" More plugin window shortcuts.
nmap <leader>v <Plug>TaskList
nmap <leader>tg :TlistToggle<cr>
nmap <leader>p :Project<cr>
nmap <leader>f :NERDTreeToggle<cr>
nmap <leader>dt <Plug>MakeGreen
let Tlist_Use_Right_Window = 1

" Edit the settings with [,s].
nmap <leader>s :e ~/.vimrc<cr>
" Delete the current buffer with [,d].
nmap <leader>d :bd<cr>
" Set to wombat, a very well meaning color scheme.
colors wombat


